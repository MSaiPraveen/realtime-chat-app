rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Legacy messages collection (for backwards compatibility)
    match /messages/{document=**} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth.uid == resource.data.uid;
      allow delete: if request.auth.uid == resource.data.uid;
    }

    // Rooms collection - ALL AUTHENTICATED USERS CAN SEE ALL ROOMS
    match /rooms/{roomId} {
      // Any authenticated user can read any room
      allow read: if request.auth != null;
      // Authenticated users can create rooms
      allow create: if request.auth != null;
      // Anyone can update a room (to join/leave via members array)
      allow update: if request.auth != null;
      // Only room creator can delete
      allow delete: if request.auth != null && request.auth.uid == resource.data.createdBy;

      // Messages within each room - ONLY MEMBERS CAN ACCESS
      match /messages/{messageId} {
        allow read: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/rooms/$(roomId)).data.members;
        allow create: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/rooms/$(roomId)).data.members;
        allow update: if request.auth != null && request.auth.uid == resource.data.uid;
        allow delete: if request.auth != null && request.auth.uid == resource.data.uid;
      }
    }
  }
}
